{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
